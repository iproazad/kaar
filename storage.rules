rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // تحقق مما إذا كان المستخدم مسجل الدخول
    function isSignedIn() {
      return request.auth != null;
    }
    
    // تحقق مما إذا كان المستخدم مسؤولاً
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // قواعد الصور والملفات
    match /images/{imageId} {
      allow read: if true; // يمكن للجميع قراءة الصور
      allow write: if isAdmin();
    }
    
    // قواعد صور الأشخاص
    match /persons/{imageId} {
      allow read: if true; // يمكن للجميع قراءة الصور
      allow write: if isAdmin();
    }
    
    // قواعد ملفات المستخدمين
    match /users/{userId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId || isAdmin();
    }
    
    // قاعدة افتراضية لجميع الملفات الأخرى
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}